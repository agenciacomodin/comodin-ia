
# =====================================
# CONFIGURACIÓN PRINCIPAL DE COMODÍN IA
# =====================================

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://comodin_user:your_secure_db_password@localhost:5432/comodin_ia
POSTGRES_PASSWORD=your_secure_db_password

# Redis (Cache y Sesiones)
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_redis_password

# Autenticación NextAuth
NEXTAUTH_SECRET=your_super_secret_nextauth_key_change_in_production
NEXTAUTH_URL=https://tu-dominio.com

# Seguridad y Encriptación
CRON_SECRET=your_cron_secret_key_2024
ENCRYPTION_SECRET=your_encryption_key_super_secure_change_in_production

# =====================================
# PROVEEDORES DE PAGO
# =====================================

# Stripe (Pagos Internacionales)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# MercadoPago (Pagos LATAM)
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-your-mp-access-token
MERCADO_PAGO_PUBLIC_KEY=APP_USR-your-mp-public-key
MERCADO_PAGO_CLIENT_ID=your_mp_client_id
MERCADO_PAGO_CLIENT_SECRET=your_mp_client_secret

# =====================================
# SERVICIOS DE IA
# =====================================

# AbacusAI API (Proveedor Principal de IA)
ABACUSAI_API_KEY=your_abacus_ai_api_key

# OpenAI (Respaldo)
OPENAI_API_KEY=sk-your-openai-api-key

# =====================================
# ALMACENAMIENTO EN LA NUBE (AWS S3)
# =====================================

# AWS Configuración
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_FOLDER_PREFIX=your-folder-prefix/

# =====================================
# WHATSAPP INTEGRATION (Evolution API)
# =====================================

# Evolution API
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key_super_secure
WEBHOOK_GLOBAL_URL=https://tu-dominio.com/api/webhooks/whatsapp

# =====================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# =====================================

# Email para notificaciones
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=COMODÍN IA <noreply@tu-dominio.com>

# =====================================
# CONFIGURACIÓN DE MONITOREO
# =====================================

# Logs y Monitoreo
LOG_LEVEL=info
ENABLE_MONITORING=true
SENTRY_DSN=your_sentry_dsn_url_optional

# =====================================
# CONFIGURACIÓN DE ENTORNO
# =====================================

# Configuración del Entorno
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Dominio Principal
DOMAIN=tu-dominio.com
PROTOCOL=https

# =====================================
# CONFIGURACIONES ADICIONALES
# =====================================

# Límites de Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Configuraciones de Archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Timezone
TZ=America/Argentina/Buenos_Aires
